<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddScheduleActivity" android:orientation="vertical">

    <TextView
            android:text="Время срабатывания: 00:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewTimeSchedule"
            android:textColor="@android:color/black" android:textSize="24sp"/>
    <Button
            android:text="Установить время"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonSetTimeSchedule"/>
    <CheckBox
            android:text="Понедельник"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBoxMonday" android:textSize="18sp"/>
    <CheckBox
            android:text="Вторник"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBoxTuesday" android:textSize="18sp"/>
    <CheckBox
            android:text="Среда"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBoxWednesday" android:textSize="18sp"/>
    <CheckBox
            android:text="Четверг"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBoxThursday" android:textSize="18sp"/>
    <CheckBox
            android:text="Пятница"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBoxFriday" android:textSize="18sp"/>
    <CheckBox
            android:text="Суббота"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBoxSaturday" android:textSize="18sp"/>
    <CheckBox
            android:text="Boскресенье"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBoxSunday" android:textSize="18sp"/>
    <Switch
            android:text="Действие"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/switchActionSchedule" android:textSize="24sp"/>
    <Button
            android:text="Добавить"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonSendScheduleData"/>
</LinearLayout>