<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextAuthEmail" android:hint="Email"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextAuthPassword" android:hint="Пароль"/>
    <Button
            android:text="Войти"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonAuth"/>
    <Button
            android:text="Регистрация"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonSwitchToReg"/>
</LinearLayout>