<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddingDeviceActivity" android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextDeviceName" android:hint="Имя устройства"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextSsid" android:hint="SSID"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextWiFiPass" android:hint="Password"/>
    <Button
            android:text="Подключиться к устройству"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonConnectToDevice"/>
    <Button
            android:text="Создать устройство"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonCreateDevice"/>
</LinearLayout>