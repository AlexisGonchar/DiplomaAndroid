<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DeviceControlActivity" android:orientation="vertical">

        <TextView
                android:text="Температура: 24.5°C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewTemperatureStatus"
                android:textColor="#000000" android:textSize="18sp"/>
        <TextView
                android:text="Влажность: 50%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewHumidityStatus"
                android:textColor="@android:color/black" android:textSize="18sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Расписание" android:id="@+id/textViewScheduleList" android:layout_marginTop="30dp"/>

        <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#B29090" >
        </ListView>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:text="Условия" android:id="@+id/textViewConditionsList"/>

        <ListView
                android:id="@+id/listView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#4A9C67" >
        </ListView>

    </LinearLayout>

</ScrollView>